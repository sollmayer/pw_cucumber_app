{
    "default": {
        "path": ["src/tests/features/*.feature"],
        "formatOptions": {
            "snippetInterface": "async-await"
         },
        "require": [
            "src/tests/steps/*.ts",
            "src/hooks/hooks.ts"
        ],
        "requireModule": ["ts-node/register"],
        "format": [
            "html:test-result/report/cucumber-report.html",
            "rerun:@rerun.txt"
        ]
    },
    "rerun": {
        "formatOptions": {
            "snippetInterface": "async-await"
         },
        "require": [
            "src/tests/steps/*.ts",
            "src/hooks/hooks.ts"
        ],
        "requireModule": ["ts-node/register"],
        "format": [
            "html:test-result/report/cucumber-report.html",
            "rerun:@rerun.txt"
        ]
    }
}